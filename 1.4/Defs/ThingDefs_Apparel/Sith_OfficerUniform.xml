<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="OuterRim_UniformBodyFabricatedBase">
		<defName>OuterRim_SithOfficerUniform</defName>
		<label>sith officer uniform</label>
		<description>A durable utalitarian uniform used by officers of the Sith Empire.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/SithOfficer/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(255, 255, 255)</color>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>OuterRim_SithEmpireArmory</researchPrerequisite>
		</recipeMaker>
		<apparel>
			<tags Inherit="False">
				<li>SithEmpireOfficer</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/SithOfficer/Apparel</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
		<thingSetMakerTags>
			<li>OuterRim_ApparelSithEmpire</li>
		</thingSetMakerTags>
	</ThingDef>

	<ThingDef ParentName="OuterRim_UniformHeadwearFabricatedBase">
		<defName>OuterRim_SithOfficerCap</defName>
		<label>sith officer cap</label>
		<description>A durable utalitarian uniform used by officers of the Sith Empire.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/SithOfficer/Head</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(255, 255, 255)</color>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>OuterRim_SithEmpireArmory</researchPrerequisite>
		</recipeMaker>
		<apparel>
			<bodyPartGroups Inherit="False">
				<li>UpperHead</li>
			</bodyPartGroups>
			<tags Inherit="False">
				<li>SithEmpireOfficer</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/SithOfficer/Head</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
		<thingSetMakerTags>
			<li>OuterRim_ApparelSithEmpire</li>
		</thingSetMakerTags>
	</ThingDef>

</Defs>